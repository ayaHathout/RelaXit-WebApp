<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.0">
    
    <persistence-unit name="myJPAUnit" transaction-type="RESOURCE_LOCAL">


        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    
        <class>com.relaxit.domain.models.CartItem</class>
        <class>com.relaxit.domain.models.Category</class>
        <class>com.relaxit.domain.models.Order</class>
        <class>com.relaxit.domain.models.OrderItem</class>
        <class>com.relaxit.domain.models.Product</class>
        <class>com.relaxit.domain.models.User</class>
        
        <properties>
            <!-- <property name="packagesToScan" value="com.relaxit.domain.models"/> -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/relaxit" />
            <property name="jakarta.persistence.jdbc.user" value="root" />
            <property name="jakarta.persistence.jdbc.password" value="M@12345678" />
            
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="false" />
            <property name="hibernate.hbm2ddl.auto" value="update" />  
        </properties>
    </persistence-unit>
</persistence>